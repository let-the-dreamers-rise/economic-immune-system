# ----- GEMINI AI CONFIGURATION -----
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
USE_GEMINI=true

# ----- CIRCLE WALLET CONFIGURATION -----
# Get your credentials from: https://console.circle.com
CIRCLE_API_KEY=YOUR_CIRCLE_API_KEY

# Entity Secret (32-byte hex key)
CIRCLE_ENTITY_SECRET=YOUR_ENTITY_SECRET

# Your agent wallet ID
AGENT_WALLET_ID=YOUR_WALLET_ID
AGENT_WALLET_ADDRESS=YOUR_WALLET_ADDRESS

# Secondary wallet for transfers
SECONDARY_WALLET_ID=YOUR_SECONDARY_ID
SECONDARY_WALLET_ADDRESS=YOUR_SECONDARY_ADDRESS

# Wallet Set Information
WALLET_SET_ID=YOUR_WALLET_SET_ID

# Set to 'true' to use real Circle SDK for payments
# Set to 'false' or remove to use simulated transactions
USE_CIRCLE=true

# ----- SERVER CONFIGURATION -----
PORT=3001
NODE_ENV=development

# ----- AGENT POLICY -----
MAX_TRANSACTION_AMOUNT_USDC=100
DAILY_SPENDING_LIMIT_USDC=1000
WEEKLY_BUDGET_USDC=1000
MONTHLY_BUDGET_USDC=5000
